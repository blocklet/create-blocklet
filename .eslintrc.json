{
  "parser": "babel-eslint",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": "@arcblock/eslint-config",
  "rules": {
    "import/extensions": "off",
    "no-console": "off",
    "import/no-unresolved": "off",
    "unicorn/filename-case": [
      "error",
      {
        "case": "kebabCase",
        "ignore": ["^setupProxy\\.js$"]
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  }
}
