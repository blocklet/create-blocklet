{
  "name": "template-vue-dapp",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "start": "cross-env NODE_ENV=development nodemon --exec tsx api/dev.js -w api",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && blocklet bundle --compact --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "lint": "eslint src api --ext .mjs,.js,.vue",
    "lint:fix": "npm run lint -- --fix",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "dependencies": {
    "@arcblock/did-connect-storage-nedb": "^1.8.0",
    "@blocklet/sdk": "^1.17.7",
    "@ocap/client": "^1.28.1",
    "@ocap/mcrypto": "^1.28.1",
    "@ocap/wallet": "^1.28.1",
    "axios": "^1.7.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@blocklet/js-sdk": "^1.17.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "bumpp": "^9.11.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-vue": "^9.32.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.3",
    "vite": "^7.0.0",
    "vite-plugin-blocklet": "^0.14.3",
    "vue": "^3.5.13",
    "zx": "^8.3.2"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .mjs,.js,.vue"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
