{
  "name": "template-vue-ts-static",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Blocklet",
    "email": "blocklet@arcblock.io"
  },
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "dev": "blocklet dev",
    "start": "vite --host",
    "clean": "rimraf .blocklet",
    "bundle": "npm run clean && vue-tsc -b && vite build && blocklet bundle --zip --create-release",
    "serve": "vite preview",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "bump-version": "zx --quiet scripts/bump-version.mjs",
    "up:deps": "taze major -I"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@blocklet/cli": "^1.16.44",
    "@vitejs/plugin-vue": "^6.0.0",
    "bumpp": "^9.11.1",
    "eslint": "9.5.0",
    "eslint-plugin-format": "^0.1.3",
    "lint-staged": "^15.4.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.9",
    "typescript": "^5.7.3",
    "vite": "^7.0.0",
    "vite-plugin-blocklet": "^0.10.0",
    "vue-tsc": "^2.2.2",
    "zx": "^8.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
