{
  "name": "did-wallet-dapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "blocklet dev",
    "lint": "eslint src api --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "start": "vite-node -c vite.config.server.js -w api/dev.js",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && blocklet bundle --compact --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "dependencies": {
    "@blocklet/sdk": "^1.17.7",
    "@ocap/mcrypto": "^1.28.1",
    "@ocap/util": "^1.28.1",
    "@ocap/wallet": "^1.28.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@arcblock/did-connect-react": "^3.3.10",
    "@arcblock/eslint-config": "^0.3.3",
    "@arcblock/ux": "^3.3.10",
    "@blocklet/js-sdk": "^1.17.7",
    "@blocklet/ui-react": "^3.3.10",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.1.2",
    "@mui/material": "^7.1.2",
    "@vitejs/plugin-react": "^4.6.0",
    "bumpp": "^9.11.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv-flow": "^4.1.0",
    "flat": "^6.0.1",
    "nodemon": "^3.1.9",
    "react": "~19.1.0",
    "react-dom": "~19.1.0",
    "react-router-dom": "^6.29.0",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "vite": "^7.0.0",
    "vite-node": "^3.2.4",
    "vite-plugin-blocklet": "^0.14.3",
    "vite-plugin-require": "^1.2.14",
    "vite-plugin-svgr": "^4.3.0",
    "zx": "^8.3.2"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
