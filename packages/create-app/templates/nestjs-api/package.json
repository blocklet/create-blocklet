{
  "name": "template-nestjs-api",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "main": "api/main.ts",
  "scripts": {
    "lint": "eslint api --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "build": "nest build",
    "dev": "blocklet dev",
    "start": "NODE_ENV=development && nest start --watch",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "lint-staged": {
    "*.{mjs,js,ts}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "resolutions": {
    "tmp": "^0.2.3"
  },
  "dependencies": {
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.16.32",
    "@nestjs/common": "^10.4.4",
    "@nestjs/core": "^10.4.4",
    "@nestjs/platform-express": "^10.4.4",
    "@ocap/client": "^1.18.135",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@arcblock/eslint-config-base": "^0.3.2",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "bumpp": "^9.5.2",
    "eslint": "^8.57.1",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "zx": "^8.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
