{
  "name": "template-vue2",
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "start": "cross-env NODE_ENV=development nodemon api/dev.js -w api",
    "clean": "node scripts/build-clean.js",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "lint": "eslint src api --ext .mjs,.js,.vue",
    "lint:fix": "npm run lint -- --fix",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "husky install",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.18.78",
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.16.7",
    "@ocap/client": "^1.18.78",
    "@ocap/mcrypto": "^1.18.78",
    "@ocap/wallet": "^1.18.78",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "vue": "^2.7.14"
  },
  "devDependencies": {
    "@vitejs/plugin-vue2": "^2.2.0",
    "bumpp": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "vite": "^4.3.5",
    "vite-plugin-blocklet": "^0.6.5",
    "vite-plugin-node-polyfills": "^0.7.0",
    "zx": "^7.2.2"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .mjs,.js,.vue"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  }
}
