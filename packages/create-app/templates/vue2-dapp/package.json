{
  "name": "template-vue2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "blocklet dev",
    "lint": "eslint src api --ext .mjs,.js,.vue",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm-run-all --parallel start:*",
    "start:client": "vue-cli-service serve",
    "start:api": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "PUBLIC_PATH=/.blocklet/proxy/<%= did %> vue-cli-service build",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.17.0",
    "@arcblock/did-auth-storage-nedb": "^1.6.3",
    "@blocklet/sdk": "^1.8.2",
    "@ocap/client": "^1.17.0",
    "@ocap/mcrypto": "^1.17.0",
    "@ocap/wallet": "^1.17.0",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/eslint-parser": "^7.18.2",
    "@vue/cli-plugin-babel": "~5.0.6",
    "@vue/cli-plugin-eslint": "~5.0.6",
    "@vue/cli-service": "~5.0.6",
    "core-js": "^3.23.2",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "vue-template-compiler": "^2.6.14"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .mjs,.js,.vue"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  }
}
