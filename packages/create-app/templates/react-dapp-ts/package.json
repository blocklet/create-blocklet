{
  "name": "template-react-ts",
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "eject": "vite eject",
    "lint": "tsc --noEmit && eslint src api/src --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "start": "cross-env NODE_ENV=development nodemon api/dev.ts -w api",
    "clean": "node scripts/build-clean.js",
    "bundle": "tsc --noEmit && npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && tsc -p tsconfig.api.json && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "husky install",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.18.50",
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.8.65",
    "@ocap/client": "^1.18.50",
    "@ocap/mcrypto": "^1.18.50",
    "@ocap/wallet": "^1.18.50",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@arcblock/eslint-config": "^0.2.3",
    "@arcblock/eslint-config-ts": "^0.2.3",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^2.2.0",
    "bumpp": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-import-sort": "^0.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^3.2.5",
    "vite-plugin-blocklet": "^0.5.17",
    "vite-plugin-node-polyfills": "^0.7.0",
    "vite-plugin-svgr": "^2.4.0",
    "zx": "^7.1.1"
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
