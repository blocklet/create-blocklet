{
  "name": "template-component-studio",
  "description": "A Blocklet to help you develop components for Pages Kit",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "COMPONENT_STORE_URL=https://test.store.blocklet.dev blocklet dev",
    "lint": "biome check . && tsc --noEmit",
    "lint:skip": "echo 'skip lint'",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "start": "vite-node -c vite-server.config.ts -w api/dev.ts",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "tsc --noEmit && npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && tsc -p tsconfig.api.json && blocklet bundle --compact --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs",
    "dev-front": "vite serve .",
    "build-lib": "node -r dotenv-flow/config -e \"require('@blocklet/pages-kit-block-studio/build-lib')\"",
    "update:deps": "npx -y taze -r -n '/arcblock|ocap|abtnode|blocklet|did-connect|did-comment|nedb/' -w -f && pnpm install && pnpm run deduplicate",
    "deduplicate": "pnpm dedupe",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "node scripts/init-component-studio.mjs"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx,css,less,scss,json,graphql}": [
      "pnpm run format",
      "pnpm run lint:skip"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcblock/did-connect-react": "^3.2.19",
    "@arcblock/did-connect-storage-nedb": "^1.8.0",
    "@arcblock/ux": "^3.2.19",
    "@blocklet/pages-kit": "^0.7.35",
    "@blocklet/pages-kit-block-studio": "^0.7.35",
    "@blocklet/pages-kit-inner-components": "^0.7.35",
    "@blocklet/pages-kit-runtime": "^0.7.35",
    "@blocklet/sdk": "^1.17.5",
    "@blocklet/studio-ui": "^0.7.8",
    "@blocklet/ui-react": "^3.2.19",
    "@ocap/client": "^1.27.15",
    "@ocap/mcrypto": "^1.27.15",
    "@ocap/wallet": "^1.27.15",
    "axios": "^1.7.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@blocklet/js-sdk": "^1.17.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv-flow": "^3.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.6.0",
    "bumpp": "^9.9.3",
    "cross-env": "^7.0.3",
    "get-port": "^5.1.1",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.26.1",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "vite": "^7.0.0",
    "vite-node": "^3.2.4",
    "vite-plugin-blocklet": "^0.13.2",
    "vite-plugin-require": "^1.2.14",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "zx": "^8.3.0"
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
