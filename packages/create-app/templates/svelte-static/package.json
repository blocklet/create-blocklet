{
  "name": "template-svelte",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "start": "vite",
    "preview": "vite preview",
    "lint": "eslint src --ext .mjs,.js,.svelte",
    "lint:fix": "npm run lint -- --fix",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run clean && vite build && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "3.0.2",
    "bumpp": "^9.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "svelte": "^4.2.18",
    "vite": "^5.3.1",
    "vite-plugin-blocklet": "^0.7.9",
    "zx": "^8.1.3"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .js,.mjs,.svelte"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
