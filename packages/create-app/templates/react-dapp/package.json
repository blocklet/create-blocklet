{
  "name": "template-react",
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "eject": "react-scripts eject",
    "lint": "eslint src api --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm-run-all --parallel start:*",
    "start:client": "craco start",
    "start:api": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "PUBLIC_URL='/.blocklet/proxy/<%= did %>' craco build",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.17.11",
    "@arcblock/did-auth-storage-nedb": "^1.6.3",
    "@blocklet/sdk": "^1.8.7",
    "@ocap/client": "^1.17.11",
    "@ocap/mcrypto": "^1.17.11",
    "@ocap/wallet": "^1.17.11",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@arcblock/eslint-config": "^0.2.2",
    "@craco/craco": "^6.4.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-scripts": "5.0.1"
  }
}
