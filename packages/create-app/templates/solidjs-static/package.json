{
  "name": "template-solid-static",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "dev": "blocklet dev",
    "start": "vite",
    "lint": "eslint src --ext .mjs,.js,.jsx",
    "lint:fix": "npm run lint -- --fix",
    "serve": "vite preview",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run clean && vite build && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "license": "MIT",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "bumpp": "^9.11.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-solid": "0.14.1",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "solid-js": "^1.9.4",
    "vite": "^7.0.0",
    "vite-plugin-blocklet": "^0.11.3",
    "vite-plugin-solid": "^2.11.7",
    "zx": "^8.3.2"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,tsx}": [
      "prettier --write",
      "eslint --ext .js,.mjs,.jsx,.tsx"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
