{
  "name": "express",
  "version": "0.1.0",
  "description": "",
  "main": "api/index.js",
  "scripts": {
    "lint": "eslint api --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "dev": "blocklet dev",
    "start": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "node scripts/build-clean.js",
    "bundle": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "husky install",
    "bump-version": "zx scripts/bump-version.mjs"
  },
  "lint-staged": {
    "*.{mjs,js,ts}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.8.33",
    "@ocap/client": "^1.18.13",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@arcblock/eslint-config-base": "^0.2.3",
    "bumpp": "^8.2.1",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "zx": "^7.1.1"
  }
}
