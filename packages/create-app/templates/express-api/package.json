{
  "name": "template-express-api",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "main": "api/index.js",
  "scripts": {
    "lint": "eslint api --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "dev": "blocklet dev",
    "start": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run clean && blocklet bundle --compact --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "lint-staged": {
    "*.{mjs,js,ts}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.16.39",
    "@ocap/client": "^1.19.15",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@arcblock/eslint-config-base": "^0.3.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "bumpp": "^9.11.1",
    "eslint": "^8.57.1",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "zx": "^8.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
