{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "blocklet dev",
    "start": "nodemon -w api api/index.js",
    "lint": "next lint",
    "lint:fix": "npm run lint -- --fix",
    "clean": "node scripts/build-clean.js",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "PUBLIC_URL='/.blocklet/proxy/<%= did %>' next build",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "husky install",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.18.89",
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.16.15",
    "@ocap/client": "^1.18.89",
    "@ocap/mcrypto": "^1.18.89",
    "@ocap/wallet": "^1.18.89",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "next": "12.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "bumpp": "^8.2.1",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.3",
    "husky": "^8.0.3",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "zx": "^7.2.3"
  }
}
