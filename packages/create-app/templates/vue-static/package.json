{
  "name": "template-vue-static",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "start": "vite --host",
    "lint": "eslint src --ext .mjs,.js,.vue",
    "lint:fix": "npm run lint -- --fix",
    "serve": "vite preview",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "npm run clean && vite build && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "deploy:child": "npm run bundle && blocklet deploy .blocklet/bundle --app-did=<%= did %>",
    "dev:child": "blocklet dev --component --app-did=<%= did %>",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "bumpp": "^9.11.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-vue": "^9.32.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "vite": "^5.4.14",
    "vite-plugin-blocklet": "^0.9.22",
    "vue": "^3.5.13",
    "zx": "^8.3.2"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .js,.vue,.mjs"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
