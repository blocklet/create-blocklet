{
  "name": "template-vue",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "serve": "vite preview",
    "start": "npm-run-all --parallel start:*",
    "start:client": "npm run dev",
    "start:api": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build --base /.blocklet/proxy/<%= did %>/",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "lint": "eslint src api --ext .mjs,.js,.vue",
    "prepare": "husky install"
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.16.9",
    "@arcblock/did-auth-storage-nedb": "^1.6.3",
    "@blocklet/sdk": "^1.7.18",
    "@ocap/client": "^1.16.9",
    "@ocap/mcrypto": "^1.16.9",
    "@ocap/wallet": "^1.16.9",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "vite-plugin-html": "^3.2.0",
    "vue": "^3.2.36"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "vite": "^2.9.9",
    "vite-plugin-blocklet": "^0.1.2"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .mjs,.js,.vue"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  }
}
