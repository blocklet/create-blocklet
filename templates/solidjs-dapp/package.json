{
  "name": "vite-template-solid",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "npm-run-all --parallel start:*",
    "start:client": "npm run dev",
    "start:api": "NODE_ENV=development nodemon api/index.js -w api",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build --base /.blocklet/proxy/<%= did %>/",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "lint": "eslint src --ext .mjs,.js,.jsx",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-solid": "0.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "vite": "^2.9.9",
    "vite-plugin-solid": "^2.2.6",
    "vite-plugin-blocklet": "^0.1.2",
    "vite-plugin-html": "^3.2.0"
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.16.15",
    "@arcblock/did-auth-storage-nedb": "^1.6.3",
    "@blocklet/sdk": "^1.7.20",
    "@ocap/client": "^1.16.15",
    "@ocap/mcrypto": "^1.16.15",
    "@ocap/wallet": "^1.16.15",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "solid-js": "^1.4.3"
  },
  "lint-staged": {
    "*.{mjs,js,vue}": [
      "prettier --write",
      "eslint --ext .js,.vue,.mjs"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  }
}
