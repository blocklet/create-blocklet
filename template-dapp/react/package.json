{
  "name": "template-react",
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "react-scripts start",
    "start": "npm-run-all --parallel start:*",
    "start:client": "yarn dev",
    "start:server": "NODE_ENV=development nodemon server/index.js -w server",
    "clean": "rm -rf .blocklet",
    "bundle": "npm-run-all --parallel bundle:*",
    "bundle:client": "PUBLIC_URL='/.blocklet/proxy/<%= did %>' yarn build",
    "bundle:server": "yarn clean && blocklet bundle --zip --create-release",
    "deploy": "yarn bundle && blocklet deploy .blocklet/bundle",
    "release": "yarn bundle && blocklet publish .blocklet/release/blocklet.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.11.15",
    "@arcblock/did-auth-storage-nedb": "^1.6.3",
    "@blocklet/sdk": "^1.4.0",
    "@ocap/client": "^1.11.15",
    "@ocap/mcrypto": "^1.11.15",
    "@ocap/wallet": "^1.11.15",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.0",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@arcblock/eslint-config-arcblock": "0.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "http-proxy-middleware": "^2.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5"
  }
}
