{
  "name": "template-react",
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint src server",
    "dev": "react-scripts start",
    "start": "npm-run-all --parallel start:*",
    "start:client": "npm run dev",
    "start:server": "NODE_ENV=development nodemon server/index.js -w server",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run bundle:client && npm run bundle:server",
    "bundle:client": "PUBLIC_URL='/.blocklet/proxy/<%= did %>' npm run build",
    "bundle:server": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "release": "npm run bundle && blocklet publish .blocklet/release/blocklet.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "latest",
    "@arcblock/did-auth-storage-nedb": "latest",
    "@blocklet/sdk": "latest",
    "@ocap/client": "latest",
    "@ocap/mcrypto": "latest",
    "@ocap/wallet": "latest",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@arcblock/eslint-config": "latest",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "http-proxy-middleware": "^2.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  }
}
