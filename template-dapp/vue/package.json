{
  "name": "template-vue",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "npm-run-all --parallel start:*",
    "start:client": "vite --host",
    "start:server": "NODE_ENV=development nodemon server/index.js -w server",
    "clean": "rm -rf .blocklet",
    "bundle": "npm run bundle:client && npm run bundle:server",
    "bundle:client": "vite build --base /.blocklet/proxy/<%= did %>",
    "bundle:server": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json"
  },
  "dependencies": {
    "@arcblock/did-auth": "latest",
    "@arcblock/did-auth-storage-nedb": "latest",
    "@blocklet/sdk": "latest",
    "@ocap/client": "latest",
    "@ocap/mcrypto": "latest",
    "@ocap/wallet": "latest",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-history-api-fallback": "^2.2.1",
    "vite-plugin-html": "^2.1.1",
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.9.3",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "vite": "^2.6.4",
    "prettier": "^2.3.2"
  }
}
